<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bhsoftworks.clientspringapp.MainActivity">

    <Button
        android:id="@+id/btn_findUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get" />

    <EditText
        android:id="@+id/edt_textId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ID" />

    <TextView
        android:id="@+id/txt_codigo_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Codigo" />

    <TextView
        android:id="@+id/txt_codigo_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_nome_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome" />

    <TextView
        android:id="@+id/txt_nome_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_login_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

    <TextView
        android:id="@+id/txt_login_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_perfil_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perfil" />

    <TextView
        android:id="@+id/txt_perfil_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_senha_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Senha" />

    <TextView
        android:id="@+id/txt_senha_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
